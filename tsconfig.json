{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "removeComments": true,
      "resolveJsonModule": true,
      "isolatedModules": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
  }
  